            <marca grupo= '$(hab)' valor = '5'/>
            <marca grupo= '$(hab)' valor = '6'/>
            <marca grupo= '$(hab)' valor = '7'/>
            <marca grupo= '$(hab)' valor = '8'/>

            <button g='col' g-width='2' text='üé≤'>
                <event name='onClick'>
                    Dialogs.choose("Escolha a Caracter√≠stica", {'For√ßa', 'Constitui√ß√£o', 'Destreza', 'Percep√ß√£o', 'Intelig√™ncia', 'For√ßa de Vontade'},
                        function(selected, seletedIndex, selectedText)
                            if selected then
                                local car = (caracteristicas[selectedText]);
                                local carVal = 1

                                if car == 'valfor' then
                                    carVal = sheet.valfor
                                end
                                if car == 'valcon' then
                                    carVal = sheet.valcon
                                end
                                if car == 'valdes' then
                                    carVal = sheet.valdes
                                end
                                if car == 'valper' then
                                    carVal = sheet.valper
                                end
                                if car == 'valint' then
                                    carVal = sheet.valint
                                end
                                if car == 'valfdv' then
                                    carVal = sheet.valfdv
                                end
                                
                                Dialogs.inputQuery("Dificuldade", "Insira a dificuldade", '+1',
                                    function(dif)
                                        rolarTeste('$(texto)', carVal or 1, sheet.val$(hab) , dif);
                                    end
